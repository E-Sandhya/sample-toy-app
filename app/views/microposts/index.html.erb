

<h1>Microposts</h1>

<table class ="table table-bordered">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @microposts.each do |micropost| %>
      <tr>
       
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td>
          <div class = "btn-group">
          <button class = "btn btn-light">
            <%= link_to 'Show', micropost %>
          </button>
          <button class = "btn btn-light">
            <%= link_to 'Edit', edit_micropost_path(micropost)%></button>
          <button class = "btn btn-light">
            <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
        
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>
<div class="btn-group">
<button class = "btn btn-info">
<%= link_to 'New Micropost', new_micropost_path, class: "text-dark"%></button>
<button class="btn btn-info">
 <%= link_to 'Users', users_path, class: "text-dark"%>
</button>
</div>
