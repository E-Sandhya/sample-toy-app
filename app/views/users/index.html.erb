 
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered">
<thead>
	<tr>
		<th><h5>Name</h5></th>
		<th><h5>Email</h5></th>
		<th colspan="2"></th>
	</tr>
</thead>

<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td>
			<div class = "btn-group">
    			<button class = "btn btn-light">
        			<%= link_to 'Show', user %>
    			</button>
    			<button class = "btn btn-light">
       	 			<%= link_to 'Edit', edit_user_path(user) %></button>
    			<button class = "btn btn-light">
        			<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        				
        		</button>
			</div>
			</td>
		</tr>
	<% end %>
</tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-success btn-mg text-light" %>
</div>